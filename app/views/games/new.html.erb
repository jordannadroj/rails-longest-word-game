
<div class="container">
  <h1>New Game</h1>

  <br>

  <p>
    <% @new_game.each do |letter| %>

     <p class="letters"><%= letter.upcase %></p>
    <% end %>
  </p>

  <br>


  <p>What is the longest word you can find?</p>
  <form class="input-group mb-3" action="/score" method="post">
    <input type="hidden" name="game" value=<%= @new_game.join %>>
    <input class="form-control rounded-start" type="text" name="attempt">
    <input class="btn btn-outline-secondary rounded-end" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  <br>

  <%= link_to 'Give me new letters!', new_path %>
</div>
